/**
 * Configuration: Development
 * @author Mindstix Labs
 */
{
	/* Web Server */
	"server": {
		"port": 3000
	},
	/* Log4JS Configuration Object */
	"logger": {
		"levels": {
			"[all]": "DEBUG"
		},
		"appenders": [
			{
			"type": "console"
			},
			{
			  "type": "dateFile",
			  "filename": "/var/log/ns-speed/application",
			  "pattern": "-yyyy-MM-dd.log",
			  "alwaysIncludePattern": true
			}
		],
	  "replaceConsole": true
	}
}